<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:gravity="center_horizontal" >

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical" >

         <Button
             android:id="@+id/button_omuz"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="80dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="1dp"
             android:text="@string/Omuz"
             android:textSize="12sp" />

         <Button
             android:id="@+id/button_arkakol"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="10dp"
             android:padding="0sp"
             android:text="@string/button_arkakol"
             android:textSize="12sp" />

         <Button
             android:id="@+id/button_sirt"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="10dp"
             android:text="@string/button_sirt"
             android:textSize="12sp" />

         <Button
             android:id="@+id/button_kalca"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="10dp"
             android:padding="0sp"
             android:text="@string/button_kalca"
             android:textSize="12sp" />

         <Button
             android:id="@+id/button_arkabacak"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="10dp"
             android:padding="0sp"
             android:text="@string/button_arkabacak"
             android:textSize="10sp" />

         <Button
             android:id="@+id/button__hepsi"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="10dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="0dp"
             android:text="Hepsi"
             android:textSize="14sp" />

     </LinearLayout>

     <ImageView
         android:id="@+id/imageView_kaslar"
         android:layout_width="200dp"
         android:layout_height="428dp"
         android:src="@drawable/kasli_kosan" />

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical" >

         <Button
             android:id="@+id/button_gogus1"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="80dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="1dp"
             android:text="@string/button_gogus"
             android:textSize="12sp" />

         <Button
             android:id="@+id/button_onkol"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="10dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="1dp"
             android:text="@string/button_onkol"
             android:textSize="12sp" />

         <Button
             android:id="@+id/button_karin"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="10dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="1dp"
             android:text="@string/button_karin"
             android:textSize="12sp" />

         <Button
             android:id="@+id/button_bilek"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="10dp"
             android:text="@string/button_bilek"
             android:textSize="12sp" />

         <Button
             android:id="@+id/button_onbacak"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="10dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="1dp"
             android:text="@string/button_onbacak"
             android:textSize="12sp" />

         <Button
             android:id="@+id/button_kalf"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="60dp"
             android:layout_height="30dp"
             android:layout_marginTop="10dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="0dp"
             android:text="Kalfler"
             android:textSize="14sp" />

     </LinearLayout>

 

        
      </LinearLayout>

