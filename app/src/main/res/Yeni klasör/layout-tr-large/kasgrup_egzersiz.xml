<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:gravity="top|center" >

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical" >

         <Button
             android:id="@+id/button_omuz"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="150dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="1dp"
             android:text="@string/Omuz"
             android:textSize="16sp" />

         <Button
             android:id="@+id/button_arkakol"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:padding="0sp"
             android:text="@string/button_arkakol"
             android:textSize="16sp" />

         <Button
             android:id="@+id/button_sirt"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:padding="0dp"
             android:text="@string/button_sirt"
             android:textSize="16sp" />

         <Button
             android:id="@+id/button_kalca"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:padding="0sp"
             android:text="@string/button_kalca"
             android:textSize="16sp" />

         <Button
             android:id="@+id/button_arkabacak"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:padding="0sp"
             android:text="@string/button_arkabacak"
             android:textSize="16sp" />

         <Button
             android:id="@+id/button__hepsi"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="0dp"
             android:text="Hepsi"
             android:textSize="22sp" />

     </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:gravity="center" >

         <ImageView
             android:id="@+id/imageView_kaslar"
             android:layout_width="320dp"
             android:layout_height="wrap_content"
             android:src="@drawable/kasli_kosan" />

     </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical" >

         <Button
             android:id="@+id/button_gogus1"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="150dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="1dp"
             android:text="@string/button_gogus"
             android:textSize="16sp" />

         <Button
             android:id="@+id/button_onkol"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="1dp"
             android:text="@string/button_onkol"
             android:textSize="16sp" />

         <Button
             android:id="@+id/button_karin"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="1dp"
             android:text="@string/button_karin"
             android:textSize="16sp" />

         <Button
             android:id="@+id/button_bilek"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:padding="0dp"
             android:text="@string/button_bilek"
             android:textSize="16sp" />

         <Button
             android:id="@+id/button_onbacak"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="1dp"
             android:text="@string/button_onbacak"
             android:textSize="16sp" />

         <Button
             android:id="@+id/button_kalf"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:paddingBottom="0dp"
             android:paddingLeft="0dp"
             android:paddingRight="0dp"
             android:paddingTop="0dp"
             android:text="Kalfler"
             android:textSize="22sp" />

     </LinearLayout>
        
      </LinearLayout>

