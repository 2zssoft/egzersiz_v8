<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <TableLayout
        android:id="@+id/TableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="2dp"
        android:showDividers="middle"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView4"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_span="2"
                android:visibility="visible"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-2772878414290299/1379962526" />
        </TableRow>

        <TableRow
            android:id="@+id/tablerow_egzersizadi"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:weightSum="2">

            <TextView
                android:id="@+id/routine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"


                android:layout_weight="2"
                android:gravity="center"
                android:lines="2"
                android:singleLine="false"
                android:text="Egzersiz Adı"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tablerow_resim"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_span="2"

                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter" />

        </TableRow>

        <TableRow
            android:id="@+id/tablerow_ekipman"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView_ekipman_yazisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="2"
                android:padding="0dp"
                android:text="@string/equipment_txt"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_ekipman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tablerow_anakas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView_anakas_yazisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/mainmuschle"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_kas_ana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:singleLine="true"
                android:text="Kas Grubu"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tablerow_yankas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView_yankas_yazisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/secondarymuscle"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_yankas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textCapSentences"
                android:singleLine="true"
                android:text="Kas Grubu"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tablerow_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView_type_yazisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:text="@string/type"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textCapSentences"
                android:singleLine="true"
                android:text="Tip"
                android:textSize="18sp" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/product_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_id_yazisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id numarası:"
                android:textColor="#000000"
                android:visibility="gone" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:layout_weight="4"
                android:padding="0dp"
                android:text="@string/steps_txt"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="2dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView_aciklama"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:layout_weight="4"
                android:padding="2dp"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:textSize="18sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_puan"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:width="40dp"
                android:text="8"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:padding="0dp"
                android:visibility="gone" />
        </TableRow>


    </TableLayout>
</ScrollView>